<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/guide_docs_card_view"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/guide_docs_card_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/guide_docs_title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimaryInverse"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/guide_docs_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:clickable="false"
                    android:cropToPadding="true"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/arrow_drop_down" />

                <TextView
                    android:id="@+id/guide_docs_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="@string/docs_card3_title"
                    android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/guide_docs_description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/guide_docs_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card3_description1"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/fences_home" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card3_description2"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/link_account_option" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card3_description3"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/link_account" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card3_description4"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/uid" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card3_description5"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/alerts_option" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/invitation" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card3_description6"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/invitation_request" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card3_description7"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/edit_fence" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card3_description8"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/manage_fences_option" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/manage_fences" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>