<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/guide_docs_card_view"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/guide_docs_card_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/guide_docs_title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimaryInverse"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/guide_docs_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:clickable="false"
                    android:cropToPadding="true"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/arrow_drop_down" />

                <TextView
                    android:id="@+id/guide_docs_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="@string/docs_card2_title"
                    android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/guide_docs_description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/guide_docs_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card2_description1"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/contacts" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card2_description2"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/choose_photo" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card2_description3"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/enter_name_and_phone_number" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/guide_docs_innertext_padding"
                    android:text="@string/docs_card2_description4"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/edit_contacts1" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/guide_docs_image_margin"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="@dimen/guide_docs_image_padding"
                    app:srcCompat="@drawable/edit_contacts2" />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>