<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/create_contact_imageview"
            android:layout_width="@dimen/image_icons_size"
            android:layout_height="@dimen/image_icons_size"
            android:layout_marginTop="16dp"
            android:background="?attr/colorPrimaryContainer"
            android:scaleType="center"
            android:src="@drawable/upload_image_icon2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/customGroupImageShape" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_contact_choose_image_button"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/create_contact_choose_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_contact_imageview" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_contact_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/create_new_contact_item_horizontal_margins"
            android:layout_marginTop="28dp"
            android:hint="@string/create_contact_enter_name"
            app:errorEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_contact_choose_image_button">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_contact_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.hbb20.CountryCodePicker
            android:id="@+id/create_contact_countryCodePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="52dp"
            app:ccp_autoDetectCountry="true"
            app:ccp_defaultNameCode="SG"
            app:ccpDialog_backgroundColor="?attr/colorPrimaryContainer"
            app:ccp_contentColor="?attr/colorOnPrimaryContainer"
            app:ccpDialog_textColor="?attr/colorOnPrimaryContainer"
            app:layout_constraintEnd_toStartOf="@+id/create_contact_number_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_contact_name_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_contact_number_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/create_new_contact_item_horizontal_margins"
            android:layout_marginTop="52dp"
            android:hint="@string/create_contact_enter_number"
            app:errorEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/create_contact_countryCodePicker"
            app:layout_constraintTop_toBottomOf="@+id/create_contact_name_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_contact_number_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:lineSpacingExtra="8sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_contact_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/create_contact_confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_contact_number_layout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_contact_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/create_contact_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_contact_confirm_button"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
